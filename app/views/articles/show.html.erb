<div>
  <div class="mb-5">
    <h1 class="font-bold mb-1 text-3x1 underline">
      <%= @article.title %>
    </h1>

    <p class="text-1xl">
      <%= @article.body %>
    </p>

    <ul>
      <button class="bg-purple-800 border-solid border-2 border-white-500 hover:bg-sky-200 hover:text-black mb-3 p-3 rounded-2xl mt-1">
        <%= link_to "Edit", edit_article_path(@article) %>
      </button>

      <button class="bg-purple-800 border-solid border-2 border-white-500 hover:bg-sky-200 hover:text-black mb-3 mt-1 p-3 rounded-2xl">
        <%= link_to "Destroy", article_path(@article), data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                        } %>
      </button>
    </ul>

    <h2 class="font-bold pb-3 text-3x1 underline">
      Comments
    </h2>

    <h2 class="bg-purple-800 border-solid border-2 border-white-500 hover:bg-sky-200 hover:text-black mb-3 mt-1 p-3 rounded-2xl">
      <%= render @article.comments %>
    </h2>

    <h2 class=" mb-3 mt-1 p-3 rounded-2xl">
      Add a new comment:
    </h2>
    
    <%= render 'comments/form' %>

    <button class="bg-purple-800 border-solid border-2 border-white-500 hover:bg-sky-200 hover:text-black mt-1 p-3 rounded-2xl">
      <%= link_to "Index", articles_path %>
    </button>
  </div>
</div>